<Page x:Class="Second_Hand_Clothes_Management_Project.View.ChiTietSanPham"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Second_Hand_Clothes_Management_Project.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="ChiTietSanPham">

    <Border
        Background="White"
        CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Border
                    Margin="10 50 10 50"
                    CornerRadius="10">
                    <Border.Background>
                        <ImageBrush ImageSource="\ResourceXAML\Image\loginimg.jpg"/>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel
                    Margin="10,50,10,0">
                    <TextBlock
                        FontFamily="Roboto Mono"
                        FontSize="25" HorizontalAlignment="Center">
                        TÊN SẢN PHẨM
                    </TextBlock>
                    <TextBlock
                        FontFamily="Roboto Mono"
                        FontSize="20" Margin="0,10,0,0" HorizontalAlignment="Center">
                        GIÁ SẢN PHẨM
                    </TextBlock>
                    <StackPanel
                        Height="30" Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="140"
                            FontFamily="Roboto Mono"
                            FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                            Loại sản phẩm
                        </TextBlock>
                        <ComboBox
                            Width="140"
                            Height="30"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F5E9D9"
                            Background="#F5E9D9"
                            BorderThickness="0"
                            FontFamily="Roboto Mono"
                            FontWeight="Thin"
                            FontSize="8"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Height="30" Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="140"
                            FontFamily="Roboto Mono"
                            FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                            Số lượng
                        </TextBlock>
                        <TextBox
                            Width="70"
                            Height="30"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F5E9D9"
                            Background="#F5E9D9"
                            BorderThickness="0"
                            FontFamily="Roboto Mono"
                            FontWeight="Thin"
                            FontSize="8"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Height="30" Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="140"
                            FontFamily="Roboto Mono"
                            FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                            Kích cỡ
                        </TextBlock>
                        <ComboBox
                            Width="70"
                            Height="30"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F5E9D9"
                            Background="#F5E9D9"
                            BorderThickness="0"
                            FontFamily="Roboto Mono"
                            FontWeight="Thin"
                            FontSize="8"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">

                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Height="30" Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="140"
                            FontFamily="Roboto Mono"
                            FontSize="15" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            Voucher
                        </TextBlock>
                        <ComboBox
                            Width="140"
                            Height="30"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F5E9D9"
                            Background="#F5E9D9"
                            BorderThickness="0"
                            FontFamily="Roboto Mono"
                            FontWeight="Thin"
                            FontSize="8"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">

                        </ComboBox>
                    </StackPanel>
                    <TextBlock
                        Width="140"
                        FontFamily="Roboto Mono"
                        FontSize="15" HorizontalAlignment="Left" 
                        Margin="0,10,0,0">
                        Mô tả sản phẩm
                    </TextBlock>
                    <TextBox
                        Margin="0,10,0,0"
                        Height="138"
                        Width="280"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                        materialDesign:TextFieldAssist.UnderlineBrush="#F5E9D9"
                        Background="#F5E9D9"
                        BorderThickness="0"
                        FontFamily="Roboto Mono"
                        FontWeight="Thin"
                        FontSize="8"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                        
                    </TextBox>
                    <Button
                        Width="105"
                        Height="20"
                        Content="THÊM SẢN PHẨM"
                        FontSize="9"
                        Background="#986639" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,0,0"
                        BorderBrush="Transparent">
                        
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
