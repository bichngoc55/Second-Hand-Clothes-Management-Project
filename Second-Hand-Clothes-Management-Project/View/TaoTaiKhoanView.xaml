<Page x:Class="Second_Hand_Clothes_Management_Project.View.TaoTaiKhoanView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Second_Hand_Clothes_Management_Project.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="605" d:DesignWidth="700"
      Title="TaoTaiKhoanView">

    <Grid>
        <!--BACKGROUND-->
        <Border Background="#D7BEA2">
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <!--TIÊU ĐỀ-->
            <TextBlock 
                Grid.Row="0"
                FontWeight="Bold"
                FontFamily="Roboto Mono"
                FontSize="48"
                VerticalAlignment="Center"
                Margin="25 0">
                TẠO TÀI KHOẢN
            </TextBlock>
            <!--THÔNG TIN TÀI KHOẢN-->
            <Grid Grid.Row="1"
                  Margin="20 0 0 0"
                  Background="#CAA88A">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Image
                            Height="250"
                            Width="200"
                            Source="C:\Users\Admin\Source\Repos\Second-Hand-Clothes-Management-Project\Second-Hand-Clothes-Management-Project\ResourceXAML\ImageProduct\ÁoThun.jpg" 
                            Margin="0,50,0,0" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"/>
                        <Button
                            Height="40"
                            Width="150"
                            Margin="0 30 0 0"
                            Background="#986639"
                            Content="Thay đổi ảnh"
                            FontSize="10"
                            BorderBrush="Transparent">

                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">

                        <TextBox
                            Width="250"
                            Height="35"
                            Margin="50 50 50 0"
                            Background="White"
                            materialDesign:HintAssist.Hint="Họ tên"
                            Padding="10"
                            FontFamily="Roboto Mono"
                            HorizontalAlignment="Center"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"/>
                        <TextBox
                            Width="250"
                            Height="35"
                            Margin="50 15 50 0"
                            Background="White"
                            materialDesign:HintAssist.Hint="Địa chỉ"
                            Padding="10"
                            FontFamily="Roboto Mono"
                            HorizontalAlignment="Center"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"/>
                        <TextBox
                            Width="250"
                            Height="35"
                            Margin="50 15 50 0"
                            Background="White"
                            materialDesign:HintAssist.Hint="Số điện thoại"
                            Padding="10"
                            FontFamily="Roboto Mono"
                            HorizontalAlignment="Center"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"/>
                        <StackPanel 
                            Orientation="Horizontal"
                            Margin="50 15 50 0"
                            Width="250"
                            Height="35">
                            <ComboBox
                                Height="35"
                                Width="120"
                                Background="White"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                                SelectedIndex="0"
                                Padding="5"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top">
                                <ComboBoxItem Content="Giới Tính"/>
                                <ComboBoxItem Content="Nam"/>
                                <ComboBoxItem Content="Nữ"/>
                            </ComboBox>
                            <ComboBox
                                Height="35"
                                Width="120"
                                Background="White"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                                SelectedIndex="0"
                                Padding="5"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="10, 0, 0, 0"
                                materialDesign:HintAssist.Hint="Ngày sinh">

                            </ComboBox>
                        </StackPanel>
                        <TextBox
                            Width="250"
                            Height="35"
                            Margin="50 15 50 0"
                            Background="White"
                            materialDesign:HintAssist.Hint="Email"
                            Padding="10"
                            FontFamily="Roboto Mono"
                            HorizontalAlignment="Center"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"/>
                        <Button
                            Background="#986639"
                            Margin="70,15,50,0"
                            Height="35"
                            Width="130"
                            Content="TẠO TÀI KHOẢN"
                            FontSize="10"
                            BorderBrush="Transparent" 
                            HorizontalAlignment="Left" 
                            />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
