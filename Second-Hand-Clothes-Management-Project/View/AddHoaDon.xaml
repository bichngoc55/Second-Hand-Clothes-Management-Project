<Page x:Class="Second_Hand_Clothes_Management_Project.View.AddHoaDon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Second_Hand_Clothes_Management_Project.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
     
        x:Name="AddHoaDonwd"
      d:DesignHeight="605" d:DesignWidth="700"
      DataContext="{StaticResource AddHoaDonVM}"
      Title="AddHoaDon">



    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="AddHoaDonwd"
                                    Storyboard.TargetProperty="Margin"
                                    From="426,0,0,0"
                                    To="0"
                                    Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loadwd}"
                               CommandParameter="{Binding ElementName=AddHoaDonwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
     x:Name="xx"
     CornerRadius="15"
     Background="#FFFFFFFF"
     >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                             Orientation="Horizontal" 
                             HorizontalAlignment="Right" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"
                             >
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White" Height="24" Width="24" Margin="0,0,8,0">

                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
                 Text="HÓA ĐƠN"
                 FontWeight="Bold"
                 Foreground="#000000"
                 FontFamily="Roboto Mono"
                 FontSize="30"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border
                     Margin="10,0,0,0"
                     Background="#E0D3BE"
                     CornerRadius="15"
                     >
                        <StackPanel
                         Margin="10"
                         >
                            <TextBlock
                             Margin="0,10,0,5"
                             Text="THÔNG TIN"
                             FontWeight="Bold"
                             FontFamily="Roboto Mono"
                             HorizontalAlignment="Center"
                             />
                            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">

                                <TextBlock
                                 Margin="8,0,0,0"
                                 Text="Số HD"
                                 FontFamily="Roboto Mono"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                 />


                                <Border Margin="43 0 0 0"  Width="210" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <DockPanel Margin="15 0 0 0" HorizontalAlignment="Left" Width="170">
                                        <TextBox
                                         x:Name="SoHD"                                          
                                         FontFamily="Roboto Mono"
                                         BorderThickness="0"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                         materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                         
                                         materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>

                                    </DockPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">

                                <TextBlock
     Margin="8,0,0,0"
     Text="Ngày lập"
     FontFamily="Roboto Mono"
            VerticalAlignment="Center"
            FontWeight="Bold"
     />


                                <Border Margin="28 0 0 0"  Width="210" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <DockPanel Margin="15 0 0 0" HorizontalAlignment="Left">
                                        <TextBox
             x:Name="Ngay" 
             
             FontFamily="Roboto Mono"
             BorderThickness="0"
             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
             materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
             IsEnabled="False"
             materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>

                                    </DockPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">

                                <TextBlock
     Margin="8,0,0,0"
     Text="Mã NV|Tên"
     FontFamily="Roboto Mono"
            VerticalAlignment="Center"
            FontWeight="Bold"
     />


                                <Border Margin="16 0 0 0" Width="210" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Margin="15 0 0 0" Orientation="Horizontal">
                                        <TextBox
            x:Name="MaND" 
            HorizontalAlignment="Left"
            FontFamily="Roboto Mono"
            BorderThickness="0"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
            IsEnabled="False"
            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                        <TextBox
            Text="|"
            HorizontalAlignment="Left"
            FontFamily="Roboto Mono"
            BorderThickness="0"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
            IsEnabled="False"
            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                        <TextBox
            x:Name="TenND"
            HorizontalAlignment="Left"
            FontFamily="Roboto Mono"
            BorderThickness="0"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
            IsEnabled="False"
            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">

                                <TextBlock
Margin="8,0,0,0"
Text="Mã KH"
FontFamily="Roboto Mono"
       VerticalAlignment="Center"
       FontWeight="Bold"
/>


                                <Border Margin="40 0 0 0" Width="210" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Margin="15 0 0 0" Orientation="Horizontal">
                                        <TextBox
       x:Name="MaKH"
       FontFamily="Roboto Mono"
       BorderThickness="0"
       materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
       materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
       
       materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Width="202">

                                        </TextBox>

                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!--<StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                                <TextBlock
     Margin="8,0,10,0"
     Text="Mã KH | Tên"
                                    VerticalAlignment="Center"
                                    
     FontFamily="Roboto Mono"
        FontWeight="Bold"
 />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
         Margin="5,0,0,0" Width="200"
         x:Name="MaKH"
                                        VerticalAlignment="Center"
         FontFamily="Roboto Mono"
         BorderThickness="0"
         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
         ItemsSource="{Binding LKH}"
         >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding MAKH}"/>
                                                    -->
                            <!--<TextBlock
                         Text="|"
                         Margin="4,0,4,0"
                         />
                                                    
                                                    <TextBlock 
                         Text="{Binding TENKH}"/>-->
                            <!--
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding Choose}"
CommandParameter="{Binding ElementName=AddHoaDonwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Border>
                            </StackPanel>-->
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
                     Margin="10,0,10,0"
                     Background="#E0D3BE"
                     CornerRadius="15"
                     >
                        <StackPanel
                         Margin="10"
                         >
                            <TextBlock
                             Margin="0,5,0,5"
                             Text="CHI TIẾT HÓA ĐƠN"
                             FontWeight="Bold"
                             FontFamily="Roboto Mono"
                             HorizontalAlignment="Center"
                             />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                 Margin="8,0,0,0"
                                 Text="Mã SP | Tên SP | Size"
                                 FontFamily="Roboto Mono"
                                    FontWeight="Bold"
                             />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
                                     Margin="15,0,0,0"
                                     x:Name="SP"
                                     FontFamily="Roboto Mono"
                                     BorderThickness="0"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     ItemsSource="{Binding LSP}"
                                     >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock  x:Name="MaSP" Text="{Binding MASP}"/>
                                                    <TextBlock
                                                     Text="|"
                                                     Margin="4,0,4,0"
                                                     />
                                                    <TextBlock  x:Name="TENSP"
                                                     Text="{Binding TENSP}"/>
                                                    <TextBlock
                                                     Text="|"
                                                     Margin="4,0,4,0"
                                                     />
                                                    <TextBlock  x:Name="SIZE"
                                                     Text="{Binding SIZE}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding Choose}"
                CommandParameter="{Binding ElementName=AddHoaDonwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Vertical">

                                <TextBlock
Margin="8,10,0,0"
Text="Trị giá"
FontFamily="Roboto Mono"
       VerticalAlignment="Center"
       FontWeight="Bold"
/>


                                <Border Margin="0 0 0 5" HorizontalAlignment="Left" Width="310" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <DockPanel Margin="15 0 0 0" HorizontalAlignment="Left">
                                        <TextBox
        x:Name="DG" 
        
        FontFamily="Roboto Mono"
        BorderThickness="0"
        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
        IsEnabled="False"
        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>

                                    </DockPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal"
                                 
                                 >
                                    <TextBlock
                                 Margin="5,0,0,0"
                                 Text="SỐ LƯỢNG"
                                        VerticalAlignment="Center"
                                 FontFamily="Roboto Mono"
                                        FontWeight="Bold"
                                 />
                                    <Border Margin="5" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                         x:Name="SL"
                                         HorizontalAlignment="Left"
                                         FontFamily="Roboto Mono"
                                         BorderThickness="0"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                         materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                         materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Width="60"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel
                                  Orientation="Horizontal"
                                 >
                                    <TextBlock
                                     Margin="10,0,10,0"
                                     Text="KHUYẾN MÃI"
                                        FontWeight="Bold"
                                     FontFamily="Roboto Mono" HorizontalAlignment="Center" VerticalAlignment="Center"
                                 />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10"
                                         Margin="5">
                                        <TextBox
                                         x:Name="KM" 
                                         HorizontalAlignment="Left"
                                         FontFamily="Roboto Mono"
                                         BorderThickness="0"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                         materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                         materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Width="60"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                             Width="270"
                             
                             Height="40"
                             Orientation="Horizontal"
                             >
                                <Border CornerRadius="5" Background="Transparent" Width="150" >
                                    <Button BorderBrush="Transparent" Background="#986639" Height="30" Width="100" Content="Thêm" HorizontalAlignment="Center"  Margin="0 0 10 0 ">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction     
                          Command="{Binding AddSP}"
                          CommandParameter="{Binding ElementName=AddHoaDonwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </Button>
                                </Border>
                                <Border CornerRadius="5" Background="Transparent" Width="150" >
                                    <Button BorderBrush="Transparent" Background="#986639" Height="30" Width="100" Content="Xóa" HorizontalAlignment="Center" Margin="0 0 10 0 ">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction     
                                                            Command="{Binding DeleteSP}"
                                                            CommandParameter="{Binding ElementName=AddHoaDonwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel>
                    <Border
         Margin="10,10,10,0"
         
         Height="40"
         CornerRadius="10"
         Background="#D8CBB7"
         >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock
                     Text="MÃ SP"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontFamily="Roboto Mono"
                     FontSize="12"
                 />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                     Margin="32,10,0,0"
                     HorizontalAlignment="Left"
                     Text="TÊN SP"
                     VerticalAlignment="Top"
                     FontFamily="Roboto Mono"
                     FontSize="12"
                 />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock
                     Text="SIZE"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontFamily="Roboto Mono"
                     FontSize="12"
                 />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock
                     Text="SL"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     MaxWidth="150"
                     FontFamily="Roboto Mono"
                     FontSize="12" Margin="45,10,0,0"
                 />
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock
                     Text="TRỊ GIÁ"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     MaxWidth="150"
                     FontFamily="Roboto Mono"
                     FontSize="12"
                 />
                            </Grid>
                        </Grid>
                    </Border>
                    <ListView x:Name="ListViewSP" 
           SelectionMode="Single"
           ScrollViewer.VerticalScrollBarVisibility="Hidden" Height="220" Width="680" d:ItemsSource="{d:SampleData ItemCount=5}"
         >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                     
                     Width="650"
                     Height="40"
                     CornerRadius="10"
                     Background="White"
         >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                 Text="{Binding MaSp}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 FontFamily="Roboto Mono"
                                    Margin="25 0 0 0"
                 FontSize="12"
                 />
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                 Margin="5,0,0,0"
                                 HorizontalAlignment="Left"
                                 Text="{Binding TenSP}"
                                 VerticalAlignment="Center"
                                 FontFamily="Roboto Mono"
                                 FontSize="12"
                             />
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                 Text="{Binding Size}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 FontFamily="Roboto Mono"
                                 FontSize="12"
                             />
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                 Text="{Binding SL}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 MaxWidth="100"
                                 FontFamily="Roboto Mono"
                                 FontSize="12"
                             />
                                        </Grid>
                                        <Grid Grid.Column="4">
                                            <TextBlock
                                 Text="{Binding Tiennhap, StringFormat={}{0:# ###} VNĐ}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 MaxWidth="150"
                                    Margin="15 0 0 0"
                                 FontFamily="Roboto Mono"
                                 FontSize="12"
                             />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4">

                <StackPanel HorizontalAlignment="Right">
                    <WrapPanel>
                        <TextBlock
                            x:Name="Voucher"
                         FontFamily="Roboto Family"
                            VerticalAlignment="Center"
                            Text="Giảm giá"/>

                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock
       FontFamily="Roboto Family"
                            x:Name="Giasaukhigiam"
          VerticalAlignment="Center"
          Text="Giá sau khi giảm"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock
       FontFamily="Roboto Family"
          VerticalAlignment="Center"
                            x:Name="TT"
          Text="Thành tiền"/>

                    </WrapPanel>
                    <DockPanel HorizontalAlignment="Right">
                        <Border CornerRadius="5" Background="Transparent" Width="150" >
                            <Button BorderBrush="Transparent" Background="#986639" Height="30" Width="150" Content="THANH TOÁN" HorizontalAlignment="Right" Margin="0,10,5,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction     
                        Command="{Binding SavePN}"
                        CommandParameter="{Binding ElementName=AddHoaDonwd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Border>
                    </DockPanel>


                </StackPanel>



            </Grid>
        </Grid>
    </Border>
</Page>
